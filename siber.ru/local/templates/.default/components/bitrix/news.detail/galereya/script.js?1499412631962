'use strict';
$(document).ready(function($) {


	$('.galereya-slider').slick({
		slidesToShow: 1,
		slidesToScroll: 1,
		arrows: false,
		fade: true,
		asNavFor: '.slider-nav',
		adaptiveHeight: true
	});
	$('.slider-nav').slick({
		slidesToShow: 6,
		slidesToScroll: 6,
		asNavFor: '.galereya-slider',
		dots: false,
		centerMode: true,
		focusOnSelect: true,
		responsive: [
		{
			breakpoint: 1200,
			settings: {
				slidesToShow: 4,
				slidesToScroll: 4,
				asNavFor: '.galereya-slider',
				dots: false,
				centerMode: true,
				focusOnSelect: true
				}
			},{
			breakpoint: 992,
			settings: {
				slidesToShow: 3,
				slidesToScroll: 3,
				asNavFor: '.galereya-slider',
				dots: false,
				centerMode: true,
				focusOnSelect: true
				}
			},{
			breakpoint: 640,
			settings: {
				slidesToShow: 2,
				slidesToScroll: 2,
				asNavFor: '.galereya-slider',
				dots: false,
				centerMode: true,
				focusOnSelect: true
				}
			}


		]
	});

});