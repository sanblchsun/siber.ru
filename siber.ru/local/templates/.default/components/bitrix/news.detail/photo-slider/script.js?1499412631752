'use strict';
$(document).ready(function($) {

	// Слайдер photo
	// ==============================
	var $slider = $('.photo-slider');
	$slider.slick({
		centerMode: true,
		dots: true,
		focusOnSelect: true,
		slidesToShow: 1,
		slicklidesToScroll: 1,
		infinite: true,
		variableWidth: true,
		prevArrow: '.photo-slider-arrow__wrapper .slider-prev',
		nextArrow: '.photo-slider-arrow__wrapper .slider-next',
		responsive: [
		{
			breakpoint: 768,
			settings: {
				centerMode: true,
				dots: false,
				slidesToShow: 1,
				slicklidesToScroll: 1,
				infinite: true,
				variableWidth: false,
				prevArrow: '.photo-slider-arrow__wrapper .slider-prev',
				nextArrow: '.photo-slider-arrow__wrapper .slider-next',
				}
			}

		]
	});
});


