'use strict';
$(document).ready(function($) {


	// "Оставить заявку"
	// =========================
	if ($('#form-application').length > 0)
	$('#form-application').doubleValidate({
		validateSuccess: function(data){
			$('#form-application .form__wrapper').slideUp();
			$('#form-application .form__success').slideDown();
		}
	});


	// ЗАГРУЗКА ФАЙЛОВ
	// отслеживаем изменение инпута file
	var fileHandler = function(){
		$('.custom-file__inputfile').change(function(){
			var $self      = $(this);
			var fileResult = $self.val();
			$self
				.parents('.custom-file')
				.find('.custom-file__inputtext')
				.val(fileResult.replace("fakepath","attachments"));
			$('.custom-file__delete').fadeTo(100, 1);
		});
		$('.custom-file__delete').on('click', function () {
			var $self = $(this);
			$self.val('');
			$('#fileinput').val('');
			$('.custom-file__delete').fadeTo(100, 0);
			$('.custom-file__inputtext').val('');
		});
	};
	fileHandler();


});