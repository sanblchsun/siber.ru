'use strict';
$(document).ready(function($) {


	// "Отправить резюме"
	// =========================
	if ($('#form-resume').length > 0)
	$('#form-resume').doubleValidate({
		validateSuccess: function(data){
			$('#form-resume .form__wrapper').slideUp();
			$('#form-resume .form__success').slideDown();
		}
	});


	// ЗАГРУЗКА ФАЙЛОВ
	// отслеживаем изменение инпута file
	var fileHandler = function(){
		$('.custom-file__inputfile').change(function(){
			var $self      = $(this);
			var fileResult = $self.val();
			$self
				.parents('.custom-file')
				.find('.custom-file__inputtext')
				.val(fileResult.replace("fakepath","attachments"));
		});
	};
	fileHandler();


});