'use strict';
$(document).ready(function($) {

	var $services = $('.main-services__text');
	var $images   = $('.main-services__image-wrap');
	var $wrap     = $('.main-services__wrapper');

	var showBg = function(){
		var $self = $(this).parent();
		var index = $self.index();
		var $activeImage = $images.eq(index);

		$self.addClass('active');
		$activeImage.addClass('active');
		$wrap.addClass('-hide-bg');
	};

	var hideBg = function(){
		var $self = $(this).parent();
		var index = $self.index();
		var $activeImage = $images.eq(index);

		$activeImage.removeClass('active');
		$self.removeClass('active');
		$wrap.removeClass('-hide-bg');
	};

	$services.on('mouseover', showBg);
	$services.on('mouseout', hideBg);

	// Параллакс
	// =========
	// if (!app.ScrollMagicController) {
	// 	app.ScrollMagicController = new ScrollMagic.Controller();
	// }
	// var scene = new ScrollMagic.Scene({
	// 	triggerElement: ".main-services",
	// 	duration: 1000,
	// 	offset: -200
	// })
	// .setTween(".main-services__image-wrap img", {
	// 	top: '-200px'
	// })
	// // .setTween(".main-services__wrapper", {
	// // 	'background-position': '40%'
	// // })
	// .addIndicators({name: "services"})
	// .addTo(app.ScrollMagicController);

	// Определение высоты экрана
	// =========================



});