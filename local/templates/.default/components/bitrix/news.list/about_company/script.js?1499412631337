'use strict';
$(document).ready(function($) {


	// Выпадающий список
	// =================

	var $companyWrap = $('.company__item');
	$('.company__title-block').on('click', function(event) {
		var $self = $(this);
			$self.siblings('.company__hidden-description').slideToggle();
			$self.toggleClass('active');
	});

});